# Manifest App commands

# Run the application
run:
    cargo run -p manifest-app

# Build debug
build:
    cargo build

# Build release
release:
    cargo build --release

# Run with release optimizations
run-release:
    cargo run -p manifest-app --release

# Check for errors without building
check:
    cargo check --all

# Run clippy lints
lint:
    cargo clippy --all -- -D warnings

# Format code
fmt:
    cargo fmt --all

# Clean build artifacts
clean:
    cargo clean
